@model NotNetflix.Models.Filme

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Movie</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <p>Ficheiro do filme atual</p>
                <video width="320" height="240" controls>
                    <source src="~/filmes/@Model.Path" type="video/webm">

                    Your browser does not support the video tag. <!-- Text to be shown incase browser doesnt support html5 -->
                </video>
                <div class="form-group">
                    <label asp-for="Path" class="control-label"></label>
                    @*https://en.wikipedia.org/wiki/WebM de modo a conhecer melhor WebM*@

                    @*os ficheiros com extensão webm são reproduzíveis no leitor de vídeo do html5*@
                    <input type="file" name="filmefile" accept=".webm" style="     color: gainsboro;" />
                    <span asp-validation-for="Path" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duracao" class="control-label"></label>
                <input asp-for="Duracao" class="form-control" />
                <span asp-validation-for="Duracao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <label class="control-label">Fotografias</label>
            <div class="form-group">
                
                @foreach (var fotos in Model.ListasDeFotografias.OrderBy(i => i.Id))
                {

                    
                    <img src="~/fotos/@fotos.Path" alt="" />
                    <button value="@fotos.Id" name="listaFotosDelete" > APAGAR</button>
                }
            </div>
            <div class="form-group">
                @foreach (var gen in ViewBag.Generos)
                {

                    @if (Model.ListasDeGeneros.Contains(gen))
                    {

                        <input type="checkbox" name="listaGenerosEditados" class="form-control" checked />@gen.Genre<br /><br />
                    }
                    else
                    {
                        <input type="checkbox" name="listaGenerosEditados" class="form-control" />@gen.Genre<br /><br />
                    }
                }
            </div>
            @*Aceitar fotografias novas*@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Fotografias</label>
                <input type="file" name="fotografia" accept=".jpg,.jpeg,.png" style="color:gainsboro;" multiple class="form-control" /><br />
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

