@model IEnumerable<NotNetflix.Models.Utilizador>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-area="Identity" asp-page="/Account/Register">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.N_telemovel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Morada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodPostal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dataNascimento)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(model => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(model => item.Email)
            </td>
            <td>
                @Html.DisplayFor(model => item.N_telemovel)
            </td>
            <th>
                @Html.DisplayFor(model => item.Morada)
            </th>
            <th>
                @Html.DisplayFor(model => item.CodPostal)
            </th>
            <th>
                @Html.DisplayFor(model => item.dataNascimento)
            </th>
            <td>
                <a asp-action="Edit" asp-controller="Utilizadores" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-controller="Utilizadores" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-controller="Utilizadores" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
