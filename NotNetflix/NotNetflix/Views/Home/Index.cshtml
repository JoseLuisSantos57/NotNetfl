@model IEnumerable<NotNetflix.Models.Filme>

@{
    ViewData["Title"] = "Index";
}


<div class="box">
    <div class="head">
        <h2>RECENTES</h2>
        
        <p class="text-right"><a asp-action="AllFilmes" asp-controller="Home" asp-route-a="1">Ver mais</a>ll</a></p>
