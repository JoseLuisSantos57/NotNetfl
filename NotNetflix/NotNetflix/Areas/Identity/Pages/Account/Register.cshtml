@page
@model RegisterModel
@{
   ViewData["Title"] = "Criar uma conta nova";
}

<h1>@ViewData["Title"]</h1>


<form asp-route-returnUrl="@Model.ReturnUrl" method="post">



   <div class="box">  
      <div class="col-md-4">
         <hr />
         <div asp-validation-summary="ModelOnly" class="text-danger"></div>

         <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control"/>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
         </div>
         <div class="form-group">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
         </div>
         <div class="form-group">
            <label asp-for="Input.ConfirmPassword"></label>
            <input asp-for="Input.ConfirmPassword" class="form-control" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
         </div>
         

      </div>
      <div class="col-md-6 col-md-offset-2">
          @* Pedir ao novo utilizador que preencha os dados do utilizador *@
          <h4>Dados do Utilizador</h4>
          <hr />
          <div class="form-group">
              <label asp-for="Input.User. Nome" class="control-label"></label>
              <input asp-for="Input.User.Nome" class="form-control" />
              <span asp-validation-for="Input.User.Nome" class="text-danger"></span>
          </div>

          <div class="form-group">
              <label asp-for="Input.User.N_telemovel" class="control-label"></label>
              <input asp-for="Input.User.N_telemovel" placeholder="ex. 111111111" class="form-control" />
              <span asp-validation-for="Input.User.N_telemovel"  class="text-danger"></span>
          </div>
          <div class="form-group">
              <label asp-for="Input.User.CodPostal"  class="control-label"></label>
              <input asp-for="Input.User.CodPostal" placeholder="formato: xxxx-xxx" class="form-control" />
              <span asp-validation-for="Input.User.CodPostal" class="text-danger"></span>
          </div>
          <div class="form-group">
              <label asp-for="Input.User.Morada" class="control-label"></label>
              <input asp-for="Input.User.Morada" class="form-control" />
              <span asp-validation-for="Input.User.Morada" class="text-danger"></span>
          </div>
          <div class="form-group">
              <label asp-for="Input.User.dataNascimento" class="control-label"></label>
              <input asp-for="Input.User.dataNascimento" class="form-control" />
              <span asp-validation-for="Input.User.dataNascimento" class="text-danger"></span>
          </div>

      </div>
   </div>
    <button type="submit" class="btn btn-primary">Registar</button>
</form>


@section Scripts {
   <partial name="_ValidationScriptsPartial" />
}
